{
  "name": "mrsmartservice-api-nest",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\" && tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "dev": "concurrently -k -n TSC,API \"tsc -w -p tsconfig.json\" \"nodemon --delay 700ms --watch dist dist/main.js\"",
    "dev:tsnode": "node --watch --loader ts-node/esm src/main.ts",
    "start:dev": "npm run dev",
    "db:init": "tsx src/schema.ts",
    "postinstall": "prisma generate",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --passWithNoTests",
    "test:unit": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest.config.ts --passWithNoTests",
    "test:e2e": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest-e2e.config.ts --runInBand --passWithNoTests",
    "test:cov": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage --config jest.config.ts --passWithNoTests"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "@google-cloud/storage": "^7.14.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mercadopago": "^2.9.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "@prisma/client": "^6.0.0",
    "class-validator": "^0.14.1",
    "class-transformer": "^0.5.1"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "nodemon": "^3.1.7",
    "tsx": "^4.20.2",
    "typescript": "^5.7.2",
    "ts-node": "^10.9.2",
    "@types/node": "^22.12.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "prisma": "^6.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5"
  }
}
